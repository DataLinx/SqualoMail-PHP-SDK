{
    "name": "datalinx/squalomail-php-sdk",
    "description": "PHP SDK for SqualoMail",
    "keywords": [
        "squalomail",
        "api",
        "webservice",
        "php",
        "sdk",
        "slovenia"
    ],
    "homepage": "https://github.com/datalinx/squalomail-php-sdk",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DataLinx",
            "email": "info@datalinx.si"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "DataLinx\\SqualoMail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DataLinx\\SqualoMail\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.14"
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes",
        "test": "vendor/bin/phpunit"
    }
}
